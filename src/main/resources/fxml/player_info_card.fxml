<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>

<?import de.jensd.fx.glyphs.materialdesignicons.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:controller="com.yeyoan.blackjack.controller.PlayerInfoCardController"
      alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml">
    <HBox styleClass="card, depth-medium">
        <HBox>
            <padding>
                <Insets topRightBottomLeft="16"/>
            </padding>
            <Text styleClass="high-emphasis" fx:id="name"/>
        </HBox>
        <Separator orientation="VERTICAL"/>
        <HBox spacing="8">
            <padding>
                <Insets topRightBottomLeft="16"/>
            </padding>
            <fx:include fx:id="handIndicator" source="hand_indicator.fxml"/>
            <Text styleClass="medium-emphasis" text="No cards" fx:id="handValue"/>
        </HBox>
        <Separator orientation="VERTICAL"/>
        <HBox>
            <padding>
                <Insets topRightBottomLeft="16"/>
            </padding>
            <Text styleClass="medium-emphasis" text="0 chips" fx:id="playerChips"/>
        </HBox>
    </HBox>
</HBox>