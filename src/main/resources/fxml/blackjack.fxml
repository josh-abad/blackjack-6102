<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>

<?import de.jensd.fx.glyphs.materialdesignicons.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root"
           fx:controller="com.yeyoan.blackjack.controller.Controller"
           xmlns:fx="http://javafx.com/fxml">
    <BorderPane styleClass="background">
        <center>
            <VBox alignment="CENTER" spacing="16">
                <padding>
                    <Insets topRightBottomLeft="16"/>
                </padding>
                <HBox alignment="CENTER">
                    <HBox styleClass="card, depth-low">
                        <HBox>
                            <padding>
                                <Insets topRightBottomLeft="16"/>
                            </padding>
                            <Text styleClass="high-emphasis" text="Dealer"/>
                        </HBox>
                        <Separator orientation="VERTICAL"/>
                        <HBox>
                            <padding>
                                <Insets topRightBottomLeft="16"/>
                            </padding>
                            <Text styleClass="medium-emphasis"
                                  text="No cards" fx:id="dealerHandValue"/>
                        </HBox>
                    </HBox>
                </HBox>
                <StackPane>
                    <VBox.margin><Insets bottom="50"/></VBox.margin>
                    <HBox alignment="CENTER" spacing="16">
                        <fx:include source="blank_card.fxml"/>
                    </HBox>
                    <HBox fx:id="dealerSide" alignment="CENTER" spacing="-50"/>
                </StackPane>
                <HBox alignment="CENTER">
                    <HBox styleClass="card, depth-low">
                        <HBox>
                            <padding>
                                <Insets topRightBottomLeft="16"/>
                            </padding>
                            <Text styleClass="high-emphasis" text="Player"/>
                        </HBox>
                        <Separator orientation="VERTICAL"/>
                        <HBox>
                            <padding>
                                <Insets topRightBottomLeft="16"/>
                            </padding>
                            <Text styleClass="medium-emphasis" text="No cards"
                                  fx:id="playerHandValue"/>
                        </HBox>
                    </HBox>
                </HBox>
                <StackPane>
                    <HBox alignment="CENTER" spacing="16">
                        <fx:include source="blank_card.fxml"/>
                    </HBox>
                    <HBox fx:id="playerSide" alignment="CENTER" spacing="-50"/>
                </StackPane>
            </VBox>
        </center>
        <bottom>
            <HBox alignment="CENTER" spacing="16">
                <padding>
                    <Insets topRightBottomLeft="16"/>
                </padding>
                <VBox styleClass="card, depth-low">
                    <HBox>
                        <padding>
                            <Insets top="16" right="16" bottom="8" left="16"/>
                        </padding>
                        <Text styleClass="medium-emphasis" text="Stats"/>
                    </HBox>
                    <Separator/>
                    <HBox spacing="16">
                        <padding>
                            <Insets topRightBottomLeft="16"/>
                        </padding>
                        <Label styleClass="high-emphasis"
                               fx:id="deckCountLabel"
                               text="3">
                            <graphic>
                                <MaterialDesignIconView
                                    glyphName="ARRANGE_BRING_FORWARD"
                                    glyphSize="52"/>
                            </graphic>
                        </Label>
                        <Label styleClass="high-emphasis"
                               fx:id="trueCountLabel"
                               text="0">
                            <graphic>
                                <MaterialDesignIconView glyphName="ARROW_UP"
                                                        glyphSize="52"/>
                            </graphic>
                        </Label>
                        <Label styleClass="high-emphasis" fx:id="playerBet"
                               text="0">
                            <graphic>
                                <MaterialDesignIconView glyphName="STAR"
                                                        glyphSize="52"/>
                            </graphic>
                        </Label>
                        <Label styleClass="high-emphasis" fx:id="playerChips">
                            <graphic>
                                <MaterialDesignIconView glyphName="COIN"
                                                        glyphSize="52"/>
                            </graphic>
                        </Label>
                    </HBox>
                </VBox>
                <VBox styleClass="card, depth-low">
                    <HBox>
                        <padding>
                            <Insets top="16" right="16" bottom="8" left="16"/>
                        </padding>
                        <Text styleClass="medium-emphasis" text="Chips"/>
                    </HBox>
                    <Separator/>
                    <HBox fx:id="chipsPane" spacing="8">
                        <padding>
                            <Insets topRightBottomLeft="8"/>
                        </padding>
                    </HBox>
                </VBox>
                <VBox styleClass="card, depth-low">
                    <HBox>
                        <padding>
                            <Insets top="16" right="16" bottom="8" left="16"/>
                        </padding>
                        <Text styleClass="medium-emphasis" text="Choices"/>
                    </HBox>
                    <Separator/>
                    <HBox spacing="8">
                        <padding>
                            <Insets topRightBottomLeft="8"/>
                        </padding>
                        <JFXButton fx:id="hitButton" text="HIT"
                                   onAction="#handleHitAction" disable="true"/>
                        <JFXButton fx:id="doubleDownButton" text="DOUBLE DOWN"
                                   onAction="#handleDoubleDownAction"
                                   disable="true"/>
                        <JFXButton fx:id="surrenderButton" text="SURRENDER"
                                   onAction="#handleSurrenderAction"
                                   disable="true"/>
                        <JFXButton fx:id="standButton" text="STAND"
                                   onAction="#handleStandAction"
                                   disable="true"/>
                    </HBox>
                </VBox>
                <VBox styleClass="card, depth-low">
                    <HBox>
                        <padding>
                            <Insets top="16" right="16" bottom="8" left="16"/>
                        </padding>
                        <Text styleClass="medium-emphasis" text="Options"/>
                    </HBox>
                    <Separator/>
                    <HBox spacing="8">
                        <padding>
                            <Insets topRightBottomLeft="8"/>
                        </padding>
                        <JFXButton fx:id="hintButton" text="HINT"
                                   disable="true"/>
                        <JFXButton fx:id="dealButton" text="DEAL"
                                   onAction="#handleDealAction"/>
                        <JFXButton fx:id="nextHandButton" text="NEXT HAND"
                                   onAction="#handleNextHandAction"
                                   disable="true"/>
                        <JFXButton text="NEW GAME"/>
                        <JFXButton text="QUIT" onAction="#handleQuitAction"/>
                    </HBox>
                </VBox>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>