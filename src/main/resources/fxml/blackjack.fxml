<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>

<?import de.jensd.fx.glyphs.materialdesignicons.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" fx:controller="com.yeyoan.blackjack.controller.Controller" 
    xmlns:fx="http://javafx.com/fxml" id="pane">
    <center>
        <VBox alignment="CENTER" spacing="16">
            <padding>
                <Insets topRightBottomLeft="16"></Insets>
            </padding>
            <HBox alignment="CENTER">
                <HBox styleClass="card, depth-low">
                    <HBox>
                        <padding>
                            <Insets topRightBottomLeft="16"></Insets>
                        </padding>
                        <Text text="Dealer"/>
                    </HBox>
                    <Separator orientation="VERTICAL"></Separator>
                    <HBox>
                        <padding>
                            <Insets topRightBottomLeft="16"></Insets>
                        </padding>
                        <Text text="No cards" fx:id="dealerHandValue"/>
                    </HBox>
                </HBox>
            </HBox>
            <StackPane>
                <VBox.margin><Insets bottom="50"/></VBox.margin>
                <HBox alignment="CENTER" spacing="16">
                    <!-- TODO: visible deck of cards by the dealer's side -->
                    <!-- <ImageView styleClass="depth-medium" preserveRatio="true" fitWidth="100.0">
                        <image>
                            <Image url="@/Cards/cardBack_red4.png"/>
                        </image>
                    </ImageView> -->
                    <fx:include source="blank_card.fxml"/>
                </HBox>
                <HBox fx:id="dealerSide" alignment="CENTER" spacing="-50"/>
            </StackPane>
            <HBox alignment="CENTER">
                <HBox styleClass="card, depth-low">
                    <HBox>
                        <padding>
                            <Insets topRightBottomLeft="16"></Insets>
                        </padding>
                        <Text text="Player"/>
                    </HBox>
                    <Separator orientation="VERTICAL"></Separator>
                    <HBox>
                        <padding>
                            <Insets topRightBottomLeft="16"></Insets>
                        </padding>
                        <Text text="No cards" fx:id="playerHandValue"/>
                    </HBox>
                </HBox>
            </HBox>
            <StackPane>
                <HBox alignment="CENTER" spacing="16">
                    <fx:include source="blank_card.fxml"/>
                </HBox>
                <HBox fx:id="playerSide" alignment="CENTER" spacing="-50"/>
            </StackPane>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="16">
            <padding>
                <Insets topRightBottomLeft="16"></Insets>
            </padding>
            <VBox styleClass="card, depth-low">
                <HBox>
                    <padding>
                        <Insets top="16" right="16" bottom="8" left="16"/>
                    </padding>
                    <Text text="Stats"/>
                </HBox>
                <Separator/>
                <HBox spacing="16">
                    <padding>
                        <Insets topRightBottomLeft="16"/>
                    </padding>
                    <Label fx:id="deckCountLabel" text="3">
                        <graphic>
                            <MaterialDesignIconView glyphName="ARRANGE_BRING_FORWARD" glyphSize="52"/>
                        </graphic>
                    </Label>
                    <Label fx:id="trueCountLabel" text="0">
                        <graphic>
                            <MaterialDesignIconView glyphName="ARROW_UP" glyphSize="52"/>
                        </graphic>
                    </Label>
                    <Label text="0">
                        <graphic>
                            <MaterialDesignIconView glyphName="STAR" glyphSize="52"/>
                        </graphic>
                    </Label>
                    <Label text="1000">
                        <graphic>
                            <MaterialDesignIconView glyphName="COIN" glyphSize="52"/>
                        </graphic>
                    </Label>
                </HBox>
            </VBox>
            <StackPane>
                <VBox styleClass="card, depth-low">
                    <HBox>
                        <padding>
                            <Insets top="16" right="16" bottom="8" left="16"></Insets>
                        </padding>
                        <Text text="Chips"/>
                    </HBox>
                    <Separator></Separator>
                    <HBox spacing="8">
                        <padding>
                            <Insets topRightBottomLeft="8"></Insets>
                        </padding>
                        <JFXButton text="5"/>
                        <JFXButton text="10"/>
                        <JFXButton text="25"/>
                        <JFXButton text="50"/>
                        <JFXButton text="100"/>
                    </HBox>
                </VBox>
                <VBox styleClass="card, depth-low" visible="false">
                    <HBox>
                        <padding>
                            <Insets top="16" right="16" bottom="8" left="16"></Insets>
                        </padding>
                        <Text text="Choices"/>
                    </HBox>
                    <Separator></Separator>
                    <HBox spacing="8">
                        <padding>
                            <Insets topRightBottomLeft="8"></Insets>
                        </padding>
                        <JFXButton fx:id="hitButton" text="HIT" onAction="#handleHitAction"/>
                        <JFXButton fx:id="doubleDownButton" text="DOUBLE DOWN" onAction="#handleDoubleDownAction"/>
                        <JFXButton fx:id="surrenderButton" text="SURRENDER" onAction="#handleSurrenderAction"/>
                        <JFXButton fx:id="standButton" text="STAND"/>
                    </HBox>
                </VBox>
            </StackPane>
            <VBox styleClass="card, depth-low">
                <HBox>
                    <padding>
                        <Insets top="16" right="16" bottom="8" left="16"></Insets>
                    </padding>
                    <Text text="Options"/>
                </HBox>
                <Separator></Separator>
                <HBox spacing="8">
                    <padding>
                        <Insets topRightBottomLeft="8"></Insets>
                    </padding>
                    <JFXButton fx:id="hintButton" text="HINT"/>
                    <JFXButton fx:id="nextHandButton" text="NEXT HAND"/>
                    <JFXButton text="NEW GAME"/>
                    <JFXButton text="QUIT" onAction="#handleQuitAction"/>
                </HBox>
            </VBox>
        </HBox>
    </bottom>
</BorderPane>